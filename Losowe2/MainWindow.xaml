    <Window x:Class="Losowe2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Losowanie 100 liczb" Height="450" Width="400">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="DrawButton" Content="Losuj 100 liczb" Padding="8,4" Margin="0,0,0,8" Click="DrawButton_Click"/>

        <TextBox x:Name="OutputTextBox"
                 Grid.Row="1"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"/>
    </Grid>
</Window>
